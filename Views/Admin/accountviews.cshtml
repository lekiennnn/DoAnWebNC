<script>
    $(document).ready(function () {
        $.ajax(
            {
                type: "POST",
                contentType: "application/json; charset=utf-8",
                url: window.location.origin + '/Admin/get_All_acc',
                processData: false,
                contentType: false,
                cache: false,
                success: function (response) {
                    var rs = JSON.parse(response);
                    if (rs.ErrCode == 1) {
                        console.log(rs.Data)
                        const account = rs.Data
                        let displayaccount = account.map(function (item) {
                            return `<div class="mix col-lg-3 col-md-6 best">
                 <div class="account-item">



                     <div class="account-info">
                         <h6>${item.UserName}</h6>
                         <div>
                             <a href="./removeaccounts?a-id=${item.ID}" class="site-btn btn-line">REMOVE</a>
                             <a href="./editaccounts?a-id=${item.ID}" class="site-btn btn-line">EDIT</a>
                         </div>
                     </div>
                 </div>
             </div>`;
                        });
                        displayaccount = displayaccount.join("");
                        displayaccount += `<div class="mix col-lg-3 col-md-6 best">
                        <div>
                            <a class="add-account-btn" href="addaccounts">
                                <i class="tim-icons icon-simple-add"></i>
                            </a>
                        </div>
                    </div>`
                        console.log(displayaccount);
                        document.getElementById("account-filter").innerHTML = displayaccount;
                    }
                    else {
                        alert(rs.ErrDesc);
                    }
                },
                error: function (response) {
                    alert("Lấy DSSP thất bại");
                }
            }
        );
    })
</script>
